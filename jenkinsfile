pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Your existing Maven build steps
                    sh 'mvn clean install'
                }
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                script {
                    // Copy the WAR file to the target directory
                    sh 'docker cp target/*.war tomcatServer:/usr/local/tomcat/webapps/'
                }
            }
        }
    }
}
