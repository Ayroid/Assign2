pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Your existing Maven build steps
                    sh 'mvn clean install'
                }
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                script {
                    // Copy the WAR file to the Tomcat Docker container
                    docker.image('tomcat:latest').inside('-v /target:/usr/local/tomcat/webapps/') {
                        sh 'cp /usr/local/tomcat/webapps/your-webapp-1.0-SNAPSHOT.war /usr/local/tomcat/webapps/'
                    }
                }
            }
        }
    }
}
